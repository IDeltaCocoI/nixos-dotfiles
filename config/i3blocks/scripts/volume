SINK=$(pactl get-default-sink)

VOLUME=$(pactl get-sink-volume "$SINK" | grep -oP '\d+%' | head -n1)
MUTE=$(pactl get-sink-mute "$SINK" | awk '{print $2}')

if [ "$MUTE" = "yes" ]; then
    ICON="ðŸ”‡"
else
    VOL_NUM=${VOLUME%\%}
    if [ "$VOL_NUM" -eq 0 ]; then
        ICON="ðŸ”ˆ"
    elif [ "$VOL_NUM" -le 50 ]; then
        ICON="ðŸ”‰"
    else
        ICON="ðŸ”Š"
    fi
fi

echo "$ICON $VOLUME"

